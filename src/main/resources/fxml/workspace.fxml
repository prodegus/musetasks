<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="900.0" prefWidth="1600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="prodegus.musetasks.workspace.WorkspaceController">
   <children>
      <VBox maxWidth="-Infinity" minWidth="-Infinity" prefWidth="100.0" HBox.hgrow="NEVER">
         <children>
            <ToggleButton fx:id="toggleToday" mnemonicParsing="false" onAction="#displayToday" prefHeight="100.0" prefWidth="100.0" selected="true" text="Heute">
               <font>
                  <Font size="11.0" />
               </font>
               <toggleGroup>
                  <ToggleGroup fx:id="displayToggle" />
               </toggleGroup>
            </ToggleButton>
            <ToggleButton fx:id="toggleLessons" mnemonicParsing="false" onAction="#displayLessons" prefHeight="100.0" prefWidth="100.0" text="Unterrichte" toggleGroup="$displayToggle">
               <font>
                  <Font size="11.0" />
               </font>
            </ToggleButton>
            <ToggleButton fx:id="toggleContacts" mnemonicParsing="false" onAction="#displayContacts" prefHeight="100.0" prefWidth="100.0" text="Kontakte" toggleGroup="$displayToggle">
               <font>
                  <Font size="11.0" />
               </font>
            </ToggleButton>
            <ToggleButton fx:id="toggleEmail" mnemonicParsing="false" onAction="#displayEmail" prefHeight="100.0" prefWidth="100.0" text="E-Mail" toggleGroup="$displayToggle">
               <font>
                  <Font size="11.0" />
               </font>
            </ToggleButton>
            <ToggleButton fx:id="toggleSettings" mnemonicParsing="false" onAction="#displaySettings" prefHeight="100.0" prefWidth="100.0" text="Einstellungen" toggleGroup="$displayToggle">
               <font>
                  <Font size="11.0" />
               </font>
            </ToggleButton>
         </children>
      </VBox>
      <StackPane fx:id="displayPane" HBox.hgrow="ALWAYS" />
   </children>
</HBox>
